{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "OPENGL! C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                // glad
                "${fileDirname}/glad.c",
                // stbi
                "${fileDirname}/stb_image.cpp",
                // imgui
                "${fileDirname}/imgui-master/imgui.cpp",
                "${fileDirname}/imgui-master/imgui_demo.cpp",
                "${fileDirname}/imgui-master/imgui_draw.cpp",
                "${fileDirname}/imgui-master/imgui_tables.cpp",
                "${fileDirname}/imgui-master/imgui_widgets.cpp",
                "${fileDirname}/imgui-master/misc/cpp/imgui_stdlib.cpp",
                "${fileDirname}/imgui-master/backends/imgui_impl_glfw.cpp",
                "${fileDirname}/imgui-master/backends/imgui_impl_opengl3.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lglfw3",
                // "-I", // this is same as -Wa,-I,...
                "-Wa,-I,${fileDirname}/imgui-master/",
                "-Wl,-rpath,/usr/local/lib/",
                "-lassimp",
                "-std=c++17",
                "-framework",
                "Cocoa",
                "-framework",
                "OpenGL",
                "-framework",
                "IOKit",
                "-Wall"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build and run OpenGL!"
        }
    ],
    "version": "2.0.0"
}